<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight Details</button>
    </a>
  </div>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <div>Meal:</div>
    <ul>
      <% flight.meals.forEach(castMember => { %>
        <li><%= castMember.name %></li>
      <% }) %>
    </ul>
  </section>
  <form id="add-per-to-meals" action="???" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Meals</button>
  </form>

  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-select">Seat (A1-F99):</label>
    <input name="seat" id="seat-select" required pattern="[A-F][1-9]\d?">
    <label for="price-select">Price:</label>
    <input name="price" id="price-select"></input>
    <button type="submit">Add Tickets</button>
  </form>

  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date Purchased</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>

</main>
<%- include('../partials/footer') %>